// currently not in use, will be used in future once session service is up and running to update the language in real time

import { useEffect } from "react";

import io from 'socket.io-client';

const socket = io('http://localhost:8001');

export const changeLanguage = (language, setLanguage) => {
    socket.emit('changeLanguage', language);

    useEffect(() => {
        socket.on('changeLanguage', (language) => {
            setLanguage(language);
        })
        return () => {
            socket.off('changeLanguage');
        }
    });
}